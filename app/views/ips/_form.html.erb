  </div>
  <div class="field">
    <%= f.label :department_id %><br />
    <%= f.collection_select :department_id, Department.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :building_id %><br />
    <%= f.collection_select :building_id, Building.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :room %><br />
    <%= f.text_field :room %>
  </div>
  <div class="field">
    <%= f.label :free %><br />
    <%= f.check_box :free %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_field :comment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
