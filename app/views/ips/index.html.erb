<h1>Listing ips</h1>

<table>
  <tr>
    <th>IP</th>
    <th>Person</th>
    <th>Department</th>
    <th>Building</th>
    <th>Room</th>
	<th>Free</th>
    <th>Comment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ips.each do |ip| %>
  <tr>
    <td><%= ip.ip_as_string %></td>
    <td><%= ip.person.name if ip.person %></td>
	<td><%= ip.department.name if ip.department %></td>
	<td><%= ip.building.name if ip.building %></td>
    <td><%= ip.room %></td>
	<td><%= ip.free %></td>
    <td><%= ip.comment %></td>
    <td><%= link_to 'Show', ip %></td>
    <td><%= link_to 'Edit', edit_ip_path(ip) %></td>
    <td><%= link_to 'Destroy', ip, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

